<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog
        id="criarFreteDialog"
        title="Adicionar Lançamento de Frete Manual"
        contentWidth="800px"
        contentHeight="600px"
        resizable="true"
        draggable="true">
        <content>
            <IconTabBar id="iconTabBarFrete" class="sapUiResponsiveContentPadding" expandable="false">
                <items>
                    <IconTabFilter id="1" text="Identificação" icon="sap-icon://tag" key="identificacao">
                        <f:SimpleForm id="2" editable="true" layout="ResponsiveGridLayout" class="sapUiContentPadding">
                            <Label id="3" text="ID Alocação SAP" required="true"/>
                            <Input id="4" value="{novoRegistro>/idAlocacaoSAP}"/>
                            <Label id="5" text="Order ID PL" required="true"/>
                            <Input id="6" value="{novoRegistro>/orderIdPL}"/>
                            <Label id="7" text="Chave Documento Mãe" required="true"/>
                            <Input id="8" value="{novoRegistro>/chaveDocumentoMae}"/>
                            <Label id="9" text="Chave Documento Filho" required="true"/>
                            <Input id="10" value="{novoRegistro>/chaveDocumentoFilho}"/>
                        </f:SimpleForm>
                    </IconTabFilter>
                    <IconTabFilter id="11" text="Detalhes NFS-e" icon="sap-icon://document-text" key="nfse">
                        <f:SimpleForm id="12" editable="true" layout="ResponsiveGridLayout" class="sapUiContentPadding">
                            <Label id="13" text="Nº NFS-e Serviço"/>
                            <Input id="14" value="{novoRegistro>/numeroNfseServico}"/>
                            <Label id="15" text="Série NFS-e Serviço"/>
                            <Input id="16" value="{novoRegistro>/serieNfseServico}"/>
                            <Label id="17" text="Data Emissão NFS-e"/>
                            <DatePicker id="18" value="{novoRegistro>/dataEmissaoNfseServico}" valueFormat="yyyy-MM-dd" displayFormat="short"/>
                            <Label id="19" text="Chave Acesso NFS-e"/>
                            <Input id="20" value="{novoRegistro>/chaveAcessoNfseServico}"/>
                            <Label id="21" text="Cód. Verificação NFS-e"/>
                            <Input id="22" value="{novoRegistro>/codigoVerificacaoNfse}"/>
                        </f:SimpleForm>
                    </IconTabFilter>
                    </items>
            </IconTabBar>
        </content>
        <beginButton>
            <Button id="23" text="Criar" type="Emphasized" press="onSalvarNovoRegistro"/>
        </beginButton>
        <endButton>
            <Button id="24" text="Cancelar" press="onCancelarDialogoCriacao"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>