<mvc:View
    controllerName="lojacap.controller.home-page"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    height="100%">

    <Page
        id="homePage"
        title="{i18n>appTitle}" 
        showHeader="true"  
        class="sapUiResponsiveContentPadding">

        <VBox
            id="conteudo"
            alignItems="Center"
            justifyContent="Center"
            height="calc(100% - 4rem)" class="sapUiSmallMarginTop">

            <Title
                id="titulo"
                text="{i18n>welcomeMessage}"
                level="H2"
                class="sapUiSmallMarginBottom" />
            <Text
                id="texto"
                text="{i18n>welcomeSubMessage}"
                class="sapUiSmallMarginBottom sapUiMediumMarginBeginEnd"
                textAlign="Center" />

            <f:Card
                id="cardprincipal"
                class="sapUiMediumMargin"
                width="300px">
                <f:header>
                    <card:Header
                        id="headercard"
                        title="{i18n>productsCardTitle}"
                        iconSrc="sap-icon://product" />
                </f:header>
                <f:content>
                    <VBox
                        id="vbox"
                        class="sapUiSmallMargin"
                        alignItems="Center"
                        justifyContent="Center">
                        <Text
                            id="card"
                            text="{i18n>productsCardText}"
                            class="sapUiTinyMarginBottom"
                            textAlign="Center"/>
                        <Button
                            id="verProdutosBtn"
                            text="{i18n>viewProductsButtonText}"
                            press=".onIrParaProdutos"
                            type="Emphasized"
                            width="100%"
                            icon="sap-icon://list" />
                    </VBox>
                </f:content>
            </f:Card>
        </VBox>
    </Page>
</mvc:View>
