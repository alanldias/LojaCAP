{
  "name": "loja",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^1",
    "@sap/cds": "^8",
    "@sap/xssec": "^4",
    "express": "^4",
    "jsonwebtoken": "^9.0.2",
    "print-js": "^1.6.0",
    "validator": "^13.15.0"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.10.0",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-lojacap": "cds watch --open lojacap/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy loja --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-cadastroclientes": "cds watch --open cadastroclientes/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-cadastroprodutos": "cds watch --open cadastroprodutos/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-clientes": "cds watch --open clientes/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-produtos": "cds watch --open produtos/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-cadastrocliente": "cds watch --open cadastrocliente/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-cadastroproduto": "cds watch --open cadastroproduto/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-pedidos": "cds watch --open pedidos/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "requires": {
      "auth": "dummy",
      "connectivity": true,
      "destinations": true,
      "html5-runtime": true,
      "portal": true
    },
    "sql": {
      "native_hana_associations": false
    }
  },
  "sapux": [
    "app/cadastroclientes",
    "app/cadastroprodutos",
    "app/clientes",
    "app/produtos",
    "app/cadastrocliente",
    "app/cadastroproduto",
    "app/pedidos"
  ]
}
